<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.jessemcgilallen.lc.entity.Topic" table="topics">
        <meta attribute="class-description">
            This class contains the topic detail.
        </meta>
        <id name="id" type="int" column="topic_id">
            <generator class="native"/>
        </id>

        <set name="languages" cascade="save-update" table="language_topic" inverse="false">
            <key column="topic_id"/>
            <many-to-many column="language_id" class="com.jessemcgilallen.lc.entity.Language"  />
        </set>

        <set name="examples" cascade="save-update" table="topic_example" inverse="false">
            <key column="topic_id"/>
            <many-to-many column="example_id" class="com.jessemcgilallen.lc.entity.Example"  />
        </set>
        <property name="name" column="name" type="string" />
        <property name="description" column="description" type="string" />
        <property name="videoURL" column="video_url" type="string" />

        <many-to-one name="Type" class="com.jessemcgilallen.lc.entity.Type"
                     column="type_id" unique="true" not-null="true" cascade="all" />
    </class>
</hibernate-mapping>